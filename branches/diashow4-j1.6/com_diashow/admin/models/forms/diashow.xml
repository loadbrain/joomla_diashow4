<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_diashow/models/rules">
        <fieldset name="details">
                <field
                        name="id"
                        type="hidden"
                />
                <field
                        name="title"
                        type="text"
                        label="COM_DIASHOW_TITLE"
                        description="COM_DIASHOW_TITLE_DESC"
                        size="40"
                        class="inputbox validate-title"
                        validate="title"
						required="true"
                        default=""
                />
                <field
                        name="image"
                        type="imagelist"
                        label="COM_DIASHOW_PICTURE_LABEL"
                        description="COM_DIASHOW_PICTURE_DESC"
                        class="inputbox validate-image"
                        hide_default="true"
						directory="../images/diashow"
                        validate="image"
						required="true"
                />				
                <field
                        name="link"
                        type="text"
                        label="COM_DIASHOW_LINK"
                        description="COM_DIASHOW_LINK_DESC"
                        size="40"
                        default=""
                />
				<field name="target" type="list" label="COM_DIASHOW_TARGET_LABEL" description="COM_DIASHOW_TARGET_LABEL_DESC" class="inputbox" size="1" Default="1">
					<option value="_blank">_blank</option>
					<option	value="_self">_self</option>
					<option	value="_top">_top</option>
				</field>
                <field
                        name="menu_id"
                        type="sql"
                        label="COM_DIASHOW_MENU_ENTRY"
                        description="COM_DIASHOW_MENU_ENTRY_DESC"
						query="SELECT distinct id, alias, menutype FROM #__menu order by #__menu.alias, #__menu.menutype, #__menu.ordering" key_field="id"  value_field="alias"
						default="menu_id"
                />


			<field name="published" type="list" label="COM_DIASHOW_FIELD_PUBLISHED_LABEL" description="COM_DIASHOW_FIELD_PUBLISHED_DESC" class="inputbox" size="1" Default="1">
				<option value="1">JPUBLISHED</option>
				<option	value="0">JUNPUBLISHED</option>
			</field>

			<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC" class="inputbox" size="1" />
					</fieldset>
			</form>
