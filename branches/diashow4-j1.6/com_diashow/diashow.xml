<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
	<name>DiaShow</name>
	<creationDate>15/02/2011</creationDate>
	<author>Ralf Weber - LoadBrain</author>
	<authorEmail>ralf@weberr.de</authorEmail>
	<authorUrl>http://www.weberr.de</authorUrl>
	<copyright>This component in released under the GNU/GPL License</copyright>
	<license>GPL</license>
	<version>4.1.0</version>
	<description><![CDATA[DiaShow is a native Joomla 1.6 Component to display diashows defined on your page]]></description>


	<!-- Runs on install/uninstall/update; New in 1.6 -->
	<scriptfile>script.php</scriptfile>
	
	<install> <!-- Runs on install -->
			<sql>
					<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
			</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
			<sql>
					<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
			</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 1.6 -->
			<schemas>
					<schemapath type="mysql">sql/updates/mysql</schemapath>
			</schemas>
	</update>	
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">install.sql</file>
		</sql>
	</install>
	
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">uninstall.sql</file>
		</sql>
	</uninstall>

        <!-- Site Main File Copy Section -->
        <!-- Note the folder attribute: This attribute describes the folder
                to copy FROM in the package to install therefore files copied
                in this section are copied from /site/ in the package -->
        <files folder="site">
        </files>
        <media destination="com_diashow" folder="media">
                <filename>index.html</filename>
                <folder>images</folder>
        </media>	


        <administration>
                <!-- Administration Menu Section -->
		<menu img="../media/com_diashow/images/diashow_icon.png"><![CDATA[DIASHOW_NAME]]></menu>
                <!-- Administration Main File Copy Section -->
                <!-- Note the folder attribute: This attribute describes the folder
                        to copy FROM in the package to install therefore files copied
                        in this section are copied from /admin/ in the package -->
            <files folder="admin">
				<!-- Admin Main File Copy Section -->
				<filename>index.html</filename>
				<filename>config.xml</filename>
				<filename>access.xml</filename>
				<filename>diashow.php</filename>
				<filename>controller.php</filename>
				<folder>sql</folder>
				<!-- tables files section -->
				<folder>tables</folder>
				<!-- models files section -->
				<folder>models</folder>
				<!-- views files section -->
				<folder>views</folder>
				<!-- controllers files section -->
				<folder>controllers</folder>
				<!-- helpers files section -->
				<folder>helpers</folder>		
				<folder>images</folder>	
				<folder>css</folder>	
				<folder>language</folder>
                </files>
                <!--<languages folder="admin">
                        <language tag="en-GB">language/en-GB/en-GB.com_rwcards.ini</language>
                        <language tag="en-GB">language/en-GB/en-GB.com_rwcards.sys.ini</language>
                </languages>-->
        </administration>		

</extension>
